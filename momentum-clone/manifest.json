{
  "manifest_version": 3,
  "name": "Focus Tab - Distraction Blocker",
  "version": "1.0.0",
  "description": "A beautiful new tab dashboard with Pomodoro timer, focus tools, and social media blocking to keep you productive",
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "*://*.facebook.com/*",
    "*://*.fb.com/*",
    "*://*.instagram.com/*",
    "*://*.youtube.com/*",
    "*://*.twitter.com/*",
    "*://*.x.com/*",
    "*://*.tiktok.com/*",
    "*://*.reddit.com/*",
    "*://*.snapchat.com/*",
    "*://*.linkedin.com/*",
    "*://*.discord.com/*",
    "*://*.twitch.tv/*"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "block_rules",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  }
}